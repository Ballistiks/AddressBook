@model List<EnderecoModel>

@{
	ViewData["Title"] = "Endereços Cadastrados";
}

<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" integrity="sha256-PI8n5gCcz9cQqQXm3PEtDuPG8qx9oFsFctPg0S5zb8g=" crossorigin="anonymous">
<script src="https://cdn.jsdelivr.net/npm/datatables@1.10.18/media/js/jquery.dataTables.min.js" integrity="sha256-3aHVku6TxTRUkkiibvwTz5k8wc7xuEr1QqTB+Oo5Q7I=" crossorigin="anonymous"></script>


<div class="d-grid gap-2 d-md-flex justify-content-md-start">
		<a class="btn btn-primary" role="button" asp-controller="Endereco" asp-action="Novo">Adicionar Novo Endereço</a>
	</div>

	<br />

<h1 class="display-4">Endereços Cadastrados</h1>

<br />

<div class="text-center">
	

	<table class="table">
		<thead>
			<tr>
				<th scope="col">ID</th>				
				<th scope="col">CEP</th>
				<th scope="col">Endereço</th>				
				<th scope="col">Bairro</th>
				<th scope="col">Complemento</th>
				<th scope="col">Cidade</th>
				<th scope="col">Estado</th>
			</tr>
		</thead>
		<tbody>
			@if (Model != null && Model.Any())
			{
				foreach (var endereco in Model)
				{
					<tr>

						<th scope="row">@endereco.Id</th>						
						<td>@endereco.Cep</td>
						<td>@endereco.Logradouro</td>
						<td>@endereco.Bairro</td>
						<td>@endereco.Complemento</td>						
						<td>@endereco.Cidade</td>
						<td>@endereco.UF</td>
						<td>
							<div class="btn-group">
								<a class="btn btn-primary" asp-route-id="@endereco.Id" asp-controller="Endereco" asp-action="Editar">Editar Endereço</a>
								<a class="btn btn-danger" asp-route-id="@endereco.Id" asp-controller="Endereco" asp-action="DeletarConfirmacao">Deletar Endereço</a>
							</div>
						</td>
					</tr>
				}
			}
		</tbody>
	</table>
	<div class="">
		<a role="button" class="btn btn-primary btn-lg" asp-controller="Endereco" asp-action="Exportar">Exportar para CSV</a>
	</div>
</div>
